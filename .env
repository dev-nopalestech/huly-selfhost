cat example.env 
# Version của Huly (tag image trên DockerHub)
HULY_VERSION=v0.6.502

# Tên stack/container trong Portainer
DOCKER_NAME=huly

# Địa chỉ domain hoặc IP để truy cập (ví dụ domain từ tailscale cert)
HOST_ADDRESS=dockerhost.kingfisher-fahrenheit.ts.net

# SSL: true = bật HTTPS, để trống = HTTP
SECURE=true

# HTTP binding
HTTP_PORT=8080
HTTP_BIND=0.0.0.0

# Tùy chỉnh giao diện
TITLE=Huly Workspace
DEFAULT_LANGUAGE=en
LAST_NAME_FIRST=false

# Volume paths (bạn có thể để mặc định để Docker tự tạo named volume)
VOLUME_DB_PATH=
VOLUME_ELASTIC_PATH=
VOLUME_FILES_PATH=

# Secret dùng để ký JWT và bảo mật session (hãy dùng chuỗi random đủ dài)
HULY_SECRET=super_secret_random_string_123
SECRET=super_secret_random_string_123
